@page "/"

@using System.Collections.Immutable;

@using System.Net.Http
@inject HttpClient Http

@code {
    private ImmutableList<Post> Posts { get; } = Blog.Posts.Sort();
}

<ol id="index">
    @foreach(Post post in Posts) {
        <li>
            <NavLink href=@($"/post/{post.Path}")>
                @post.Title
            </NavLink>
        </li>
    }
</ol>
